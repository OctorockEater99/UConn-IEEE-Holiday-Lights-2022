  **/
  for (int j = 0; j < ROWS; j++) {
    for (int i = 0; i < COLS; i++) {
      leds_dest[XY_canvas(i, j)] = color;
      FastLED.show();
      delay(50);
    }
  }
  delay(500);
  FastLED.clear();
  FastLED.show();
}

